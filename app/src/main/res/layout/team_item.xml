<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Uruguay"></TextView>

        <TextView
            android:id="@+id/team_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:linksClickable="true"
            tools:text="http://www.auf.org.uy"></TextView>

        <TextView
            android:id="@+id/team_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sky Blue / White / Black"></TextView>

        <TextView
            android:id="@+id/team_venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Guangxi Sports Centre Stadium"></TextView>

    </LinearLayout>

</androidx.cardview.widget.CardView>
